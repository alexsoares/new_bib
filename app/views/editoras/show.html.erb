<% title "EDITORAS" %>
<div class ="tabs">
  <div id="topoShow"></div>
   <div id="caixa_titulo">
     <font size="3"><strong>EDITORA</strong></font><br/>
   </div>
     <table  width="100%" bgcolor="#F5F5F5">
       <tr>
         <td width="10%"><strong>Nome:</strong> </td>
         <td align="left"><%=h @editora.nome %></td>
       </tr>
       <tr>
         <td width="10%"><strong>Cidade:</strong> </td>
         <td align="left"><%=h @editora.cidade %></td>
       </tr>
       <tr>
         <td width="10%"><strong>País:</strong> </td>
         <td align="left"><%=h @editora.pais %></td>
       </tr>
     </table>
        <table>
          <tr>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/listar.png", :size => "25x25"), editoras_path, :title => "Editoras Cadastradas" %></td>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_editora_path(@editora), :title => "Editar Editora" %></td>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "25x25"), @editora, :confirm => 'Confirma Exclusão?', :method => :delete, :title => "Excluir Editora" %></td>
            <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "22x22"), new_editora_path, :title => "Cadastrar Título" %></td>
          </tr>
        </table>
</div>



