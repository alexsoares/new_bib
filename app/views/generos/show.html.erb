<% title "GÊNEROS" %>
<div class ="tabs">
  <div id="topoShow"></div>
   <div id="caixa_titulo">
     <font size="3"><strong>GÊNERO </strong></font><br/>
   </div>
     <table  width="100%" bgcolor="#F5F5F5">
       <tr>
         <td width="10%"><strong>Gênero:</strong>  <%=h @genero.nome %></td>
       </tr>
     </table>
        <table>
          <tr>
            <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/listar.png", :size => "25x25"), generos_path, :title => "Gêneros Cadastrados" %></td>

            <% if current_user.has_role?('admin') %>
                <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_genero_path(@genero), :title => "Editar Gênero" %></td>
                <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "25x25"), @genero, :confirm => 'Confirma Exclusão?', :method => :delete, :title => "Excluir Gênero" %></td>
                <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "22x22"), new_genero_path, :title => "Cadastrar Gênero" %></td>
            <%else%>
                <td> </td>
                <td> </td>
                <td> </td>
            <%end%>
         </tr>
     </table>
</div>