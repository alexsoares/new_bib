<% title "MAPAS" %>
<div class ="tabs">
  <div id="topoShow"></div>
    <font size="5"><strong><%=h "#{@mapas.titulo}" %></strong></font><br/>
    <font size="4"><strong><%=h "#{@mapas.subtitulo}" %></strong></font><br/><br/>
       <div id="telaShow">
         <div id="linhaCentral">
           <div id="conteudoEsquerda">
              <h3><b><i><font color="DimGrey">Informações sobre o mapa</font></i></b></h3>
                  <hr>
                    <strong>Formato:</strong>  <%=h @mapas.formato %><br/>
                     <strong>Editora:</strong>   <%=h @mapas.editora.nome %><br/>
                     <strong>Edição:</strong>   <%=h @mapas.edicao %>ª<br/>
                     <strong>Data Edição:</strong>  <%if !@mapas.ano.nil?%>
                                                       <%=h @mapas.ano.strftime("%Y") %><br/>
                                                    <%else%>
                                                       <br/>
                                                    <%end%>
                     <strong>Local Edição:</strong>   <%=h @mapas.local_edicao %><br/>
                </div>
                <div id="colunaDireita">
                  <h3><font color="DimGrey"><b><i>Informações sobre localização</i></b></font></h3>
                  <hr>
                     <strong>Tombo Seduc:</strong>   <%=h @mapas.tombo_seduc %><br/>
                     <strong>Tombo Local:</strong>   <%=h @mapas.tombo_l %><br/>
                     <strong>Tipo de aquisição:</strong>   <%=h @mapas.localizacao.aquisicao%><br/>
                     <strong>Data Aquisição:</strong> <%if !@mapas.localizacao.data_aquisicao.nil?%>
                                                        <%=h @mapas.localizacao.data_aquisicao.strftime("%d / %b / %Y")%><br/>
                                                    <%else%>
                                                       <br/>
                                                    <%end%>
                     <strong>Localização:</strong>   <%=h @mapas.localizacao.local_guardado %><br/>
                     <strong>Unidade:</strong>   <%=h @mapas.localizacao.unidade.nome %><br/>
                     <strong>Observação:</strong>   <%=h @mapas.obs%><br/>
                </div>

              </div>
            </div>
    <table>
          <tr>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/listar.png", :size => "25x25"), mapas_path, :title => "Mapas Cadastradas" %></td>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_mapa_path(@mapas), :title => "Editar Mapa" %></td>
            <td width="6%"align="left" ><%= link_to image_tag("/stylesheets/images/excluir.png", :size => "25x25"), @mapas, :confirm => 'Confirma Exclusão?', :method => :delete, :title => "Excluir Mapa" %></td>
            <td><%= link_to image_tag("/stylesheets/images/adicionar.png", :size => "22x22"), new_jogo_path, :title => "Cadastrar Jogos" %></td>
          </tr>
      </table>

</div>

