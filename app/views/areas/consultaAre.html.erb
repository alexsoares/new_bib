<% title "ÁREAS", :id =>"areas" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTA ÁREA</strong></font><br/>
   </div>
  <div class="tabs">
    <% form_remote_tag :url => consultaAre_path, :method => :get,:loading => "$('#status').show()" , :success => "$('#status').hide()" do %>
         <table width="100%" align="center" bgcolor="#DCDCDC" >
          <tr>
            <td>
               <a href="#" class="filtro"><%= radio_button_tag(:type_of, "1") %></a>Nome

               <a href="#" class="sem_filtro"><%= radio_button_tag(:type_of, "3") %></a>Todos
            </td>
         </tr>
         <tr>
           <td><div class="consulta" style="display:none"> <%= render "/shared/consulta" %> </div></td>
         </tr>
        </table>
    <% end %>
    <br/>
    <hr>
    <div id="areas"><div id='status' style='display:none;' align="center" ><%= image_tag("/stylesheets/images/loading.gif") %></div></div>
    <br/>
  <table>
    <tr>
     <td width="6%" align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "35x35"), root_path, :title => "Voltar" %></td>
     <td width="6%" align="left"><%= link_to image_tag("/stylesheets/images/consulta.png", :size => "40x40"), consultaAre_path, :title => "Nova Consulta" %></td>
     <td align="left"><%= link_to image_tag("/stylesheets/images/cadastrar.gif", :size => "30x30"), new_area_path, :title => "Cadastrar Área" %></td>
    </tr>
  </table>
 </div>
 </div>


